
@model SaleManager.Web.Models.CategoryModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var controllerName = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    var actionName = HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString();
}
<link rel="stylesheet" href="@Url.Content("~/Content/" + controllerName + ".css")">
<script src="@Url.Content("~/Scripts/" + controllerName + "/" + actionName + ".js")"></script>

<form method="post" action="@Url.Action("Add")">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="name">Name</label>
        <input name="Name" value="@Model.Name" type="text" class="form-control" id="name" aria-describedby="nameHelp">
        <small id="nameHelp" class="form-text text-danger">@Html.ValidationMessage("Name")</small>
    </div>
    <div class="form-group">
        <label for="descrption">Description</label>
        <input name="Description" value="@Model.Description" type="text" class="form-control" id="descrption" aria-describedby="descrptionHelp">
        <small id="descrptionHelp" class="form-text text-danger">@Html.ValidationMessage("Description")</small>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
