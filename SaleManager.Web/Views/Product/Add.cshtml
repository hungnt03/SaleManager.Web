
@model SaleManager.Web.Models.ProductModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var controllerName = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    var actionName = HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString();
}
<link rel="stylesheet" href="@Url.Content("~/Content/" + controllerName + ".css")">
<script src="@Url.Content("~/Scripts/" + controllerName + "/" + actionName + ".js")"></script>

<form method="post" action="@Url.Action("Add")">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="Barcode">Barcode</label>
        <input name="Barcode" value="@Model.Barcode" type="text" class="form-control" required>
        <div class="invalid-feedback">@Html.ValidationMessage("Barcode")</div>
    </div>
    <div class="form-group">
        <label for="Name">Name</label>
        <input name="Name" value="@Model.Name" type="text" class="form-control" id="Name" aria-describedby="NameHelp">
        <small id="NameHelp" class="form-text text-danger">@Html.ValidationMessage("Name")</small>
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input name="Price" value="@Model.Price" type="text" class="form-control" id="Price" aria-describedby="PriceHelp">
        <small id="PriceHelp" class="form-text text-danger">@Html.ValidationMessage("Price")</small>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
